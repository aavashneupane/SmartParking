<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"

    android:layout_height="match_parent"
    tools:context=".GetOutActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:text="Get Out"
            android:textColor="@color/black"
            android:textSize="70sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view1"
                android:layout_width="650dp"
                android:layout_height="190dp"
                android:layout_gravity="center"
                app:cardCornerRadius="20dp"
                app:cardElevation="30dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Slot 1"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textColor="@color/black"
                    android:textSize="40sp" />

                <EditText
                    android:id="@+id/etgetout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="55dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:hint="Enter Your Verification Code."
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/btngetout1"
                    android:layout_marginTop="60dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:text="Get Out"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"/>

            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></TextView>


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view2"
                android:layout_width="650dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                app:cardCornerRadius="20dp"
                app:cardElevation="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Slot 2"
                    android:textColor="@color/black"
                    android:textSize="40sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:textSize="25sp"
                    android:layout_marginTop="55dp"
                    android:id="@+id/etgetout2"
                    android:fontFamily="sans-serif-smallcaps"
                    android:hint="Enter Your Verification Code."
                    android:gravity="center"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/btngetout2"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Get Out"
                    android:layout_marginTop="70dp"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"/>


            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></TextView>


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view3"
                android:layout_width="650dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                app:cardCornerRadius="20dp"
                app:cardElevation="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Slot 3"
                    android:textColor="@color/black"
                    android:textSize="40sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:textSize="25sp"
                    android:layout_marginTop="55dp"
                    android:id="@+id/etgetout3"
                    android:fontFamily="sans-serif-smallcaps"
                    android:hint="Enter Your Verification Code."
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/btngetout3"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Get Out"
                    android:layout_marginTop="70dp"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></TextView>




        </LinearLayout>

    </LinearLayout>
</ScrollView>